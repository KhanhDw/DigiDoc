<link rel="stylesheet" href="~/css/signin.css" asp-append-version="true" />


<div class="body-signin">
	<div class="login-container">
		<h2 class="text-center mb-4">Đăng Ký</h2>
		<form asp-controller="Register" asp-action="Index" method="post">
			<div class="mb-3">
				<label for="username" class="form-label">Tên người dùng</label>
				<input name="usernameregister" type="text" class="form-control btnSign" id="username"
					placeholder="Nhập tên người dùng">
			</div>
			<div class="mb-3">
				<label for="email" class="form-label">Địa chỉ Email</label>
				<input name="emailregister" type="email" class="form-control btnSign" id="email"
					placeholder="Nhập địa chỉ email">
			</div>
			<div class="boxinputpassword">
				<label for="inputpassword" class="form-label">Mật khẩu</label>
				<input name="passwordregister" type="password" class="form-control btnSign" id="inputpassword"
					placeholder="Nhập mật khẩu">
				<button class="showpassword" type="button">
					<i id="hiddenpassword" class="fa-regular fa-eye-slash"></i>
				</button>
			</div>
			<div class="boxinputpassword">
				<label for="reinputpassword" class="form-label">Nhập lại mật khẩu</label>
				<input name="repasswordregister" type="password" class="form-control btnSign" id="reinputpassword"
					placeholder="Nhập lại mật khẩu">
				<button class="showpassword" type="button">
					<i id="rehiddenpassword" class="fa-regular fa-eye-slash"></i>
				</button>
			</div>
			<div class="mb-3 form-check">
				<label class="form-check-label " for="rememberMe">Nhớ mật khẩu</label>
				<input type="checkbox" class="form-check-input" id="rememberMe">
			</div>

			<button type="submit" class="btn btn-primary w-100">Đăng Ký</button>

			<div class="text-center mt-3">
				<p>Hoặc đăng ký bằng:</p>
				<a href="#" class="sizebtnSignbox">
					<i class="fa-brands fa-facebook sizebtnSign fa-2x"></i>
				</a>
				<a href="#" class="sizebtnSignbox">
					<i class="fa-brands fa-google sizebtnSign fa-2x"></i>
				</a>
			</div>
		</form>
	</div>
</div>
<script src="~/js/signup.js" asp-append-version="true"></script>
