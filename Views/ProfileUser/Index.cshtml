@model WebApplication1.Models.User

<style>
    .ProfileUserBody {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
    @*
        background-color:
        #f0f0f0;
        *@
    }

    .container {
        max-width: 800px;
        margin: 20px auto;
        background-color: white;
        border-radius: 8px;
        overflow: hidden;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.742);
    }

    .header {
        height: 200px;
        position: relative;

        background-image: url('/img/@Model.AnhBia');
        background-size: cover;
        /* Đảm bảo ảnh phủ kín phần tử */
        background-position: center;
        /* Căn giữa ảnh */
        background-repeat: no-repeat;
        /* Không lặp lại ảnh */


    }

    .profile-pic {
        width: 120px;
        height: 120px;
        border-radius: 50%;
        background-color: #ddd;
        position: absolute;
        bottom: -60px;
        left: 30px;
        border: 4px solid white;
    }

    .img-profile-pic {
        width: 100%;
        height: 100%;
        object-fit: cover;
        border-radius: 50%;
    }

    .header-buttons {
        position: absolute;
        bottom: 10px;
        right: 10px;
    }

    .btn {
        background-color: rgba(255, 255, 255, 0.171);
        border: none;
        padding: 8px 12px;
        margin-left: 10px;
        border-radius: 4px;
        cursor: pointer;
    }

    .name-bar {
        background-color: #030303;
        color: white;
        padding: 20px 0 20px 170px;
        border-bottom-left-radius: 10px;
        border-bottom-right-radius: 10px;
    }

    .nav-bar {
        display: flex;
        border-bottom: 1px solid #ddd;
    }

    .nav-item_profile {
        flex: 1;
        text-align: center;
        padding: 10px;
        background-color: #f8f8f8;
        cursor: pointer;
    }

    .nav-item_profile.active {
        background-color: white;
        border-bottom: 2px solid #2b6777;
    }

    .content {
        display: flex;
        padding: 20px;
    }

    .sidebar {
        width: 25%;
        padding-right: 20px;
    }

    .social-icons {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 10px;
    }

    .social-icon {
        width: 40px;
        height: 40px;
        background-color: #ddd;
    }

    .main-content {
        width: 75%;
    }

    .search-bar {
        width: 100%;
        padding: 10px;
        margin-bottom: 20px;
        border: 1px solid #ddd;
        border-radius: 4px;
    }

    .post {
        height: 50px;
        background-color: #f0f0f0;
        margin-bottom: 10px;
        border-radius: 4px;
    }
</style>

<div class="ProfileUserBody">
    <div class="container">
        <div class="header">
            <div class="profile-pic">
                <img src="~/img/@Model.AnhDaiDien" alt="Avatar" class="img-profile-pic">
            </div>
            <div class="header-buttons">
                <button class="btn">Thay đổi ảnh đại diện</button>
                <button class="btn">Thay đổi ảnh bìa</button>
            </div>
        </div>
        <div class="name-bar">
            <h2>@Model.Username</h2>
        </div>
        <div class="nav-bar">
            <div class="nav-item_profile active">Tài liệu đã đăng</div>
            <div class="nav-item_profile">Bài viết</div>
        </div>
        <div class="content">
            <div class="sidebar">
                <div class="social-icons">
                    <div class="social-icon"></div>
                    <div class="social-icon"></div>
                    <div class="social-icon"></div>
                    <div class="social-icon"></div>
                    <div class="social-icon"></div>
                </div>
            </div>
            <div class="main-content">
                <input type="text" class="search-bar" placeholder="Tài Liệu Đã Đăng">
                <div class="post"></div>
                <div class="post"></div>
                <div class="post"></div>
                <div class="post"></div>
                <div class="post"></div>
            </div>
        </div>
    </div>

    <script>
        document.querySelectorAll('.nav-item_profile').forEach(item => {
            item.addEventListener('click', function () {
                document.querySelector('.nav-item_profile.active').classList.remove('active');
                this.classList.add('active');
            });
        });
    </script>
</div>